---
import { ChevronLeft, Dot } from "lucide-astro";
import { map } from "remeda";
import { twMerge } from "tailwind-merge";

interface Props {
  elements: {
    label: string;
    href?: string;
  }[];
  className?: string;
}

const { elements, className } = Astro.props;
---

<div class={twMerge("flex flex-row items-center gap-2", className)}>
  {
    map(elements, (element, index) => (
      <div class="flex flex-row items-center gap-2">
        <a
          class="hover:text-primary-100 duration-300 text-sm text-muted"
          href={element.href ?? "#"}
        >
          {element.label}
        </a>
        {index < elements.length - 1 && <Dot />}
      </div>
    ))
  }
</div>
