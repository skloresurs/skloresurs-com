---
import { Icon } from "astro-icon/components";
import { map } from "remeda";
import { m } from "@/paraglide/messages";

const targets = [
  {
    key: "area",
    label: m.home_target_area(),
  },
  {
    key: "employees",
    label: m.home_target_employees(),
  },
  {
    key: "location",
    label: m.home_target_location(),
  },
  {
    key: "products",
    label: m.home_target_products(),
  },
  {
    key: "projects",
    label: m.home_target_projects(),
  },
  {
    key: "types",
    label: m.home_target_types(),
  },
] as const;
---

<div id="target" class="mt-6 w-full bg-background-400 py-6">
  <div class="mx-auto grid w-full max-w-6xl grid-cols-1 gap-6 md:grid-cols-3">
    {
      map(targets, ({ key, label }, index) => (
        <div
          class="flex flex-col gap-4 px-6"
          data-aos="fade-up"
          data-aos-anchor-placement="top-bottom"
          data-aos-delay={index * 50}
        >
          <div class="flex size-10 items-center justify-center rounded-md bg-primary p-1 text-white">
            <Icon name={`targets/${key}`} class="size-7" />
          </div>
          <p class="text-xl">{label}</p>
        </div>
      ))
    }
  </div>
</div>
