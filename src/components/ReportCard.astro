---
import { setAttr } from "@directus/visual-editing";
import { Eye, FileChartPie } from "lucide-astro";

interface Props {
  id: string;
  title: string;
  href: string;
  type: "audit" | "finance";
}

const { id, type, title, href } = Astro.props;
---

<a
  {...{
    "data-directus": setAttr({
      collection: "skloresurs_reports",
      item: id,
      fields: [type],
      mode: "popover",
    }),
  }}
  href={href}
  target="_blank"
  class="flex cursor-pointer flex-row items-center gap-2 rounded-md border-2 border-primary px-3 py-2 duration-500 hover:bg-background-600"
>
  <div class="flex size-12 items-center justify-center rounded-full bg-primary">
    <FileChartPie className="size-8" />
  </div>
  <h3 class="m-0 flex-1 text-lg font-semibold">{title}</h3>
  <Eye className="size-6" />
</a>
